package application;

import java.time.LocalDateTime;
import java.time.format.DateTimeFormatter;

import entities.Comment;
import entities.Post;

public class Program {

	public static void main(String[] args) {
		
		DateTimeFormatter frt01 = DateTimeFormatter.ofPattern("dd/MM/yyyy HH:mm:ss");
		
		Comment c1 = new Comment("Have a nice trip!");
		Comment c2 = new Comment("How its awesome!");
		
		Post p1 = new Post(LocalDateTime.from(frt01.parse("21/06/2018 13:05:44")), 
				"Traveling to New Zealand",
				"I'm going to visit this wonderful country!",
				12);
		p1.addComment(c1);
		p1.addComment(c2);
		
		System.out.println(p1);
		
		Comment c3 = new Comment("Good night");
		Comment c4= new Comment("May the Force be with you");
		
		Post p2 = new Post(LocalDateTime.from(frt01.parse("28/07/2018 23:14:19")), 
				"Good night guys",
				"See you tomorrow",
				5);
		p1.addComment(c1);
		p1.addComment(c2);
		
		System.out.println(p1);
		
	}

}
