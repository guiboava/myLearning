import java.util.Locale;
import java.util.Scanner;

public class uri1158 {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		int soma = 0, X, Y, min = 0, max = 0;

		int N = sc.nextInt();

		for (int i = 0; i < N; i++) {
			X = sc.nextInt();
			Y = sc.nextInt();
			int cont = 0;
			while (cont <= Y) {
				if (X % 2 !=0) {
					soma += X;
					X += 1;
				}
			}
			
			
		}

		sc.close();
	}

}
